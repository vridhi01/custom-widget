<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Excellence\Widget\Block\Widget\CustomWidget" id="excellence_widget_customwidget">
        <label>Catalog New Products Slider</label>
        <description>List of Products that are set as new</description>
        <parameters>

              <parameter name="autoplay" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Auto Play</label>
            </parameter>

            <parameter name="autoplaytimeout" sort_order="15" visible="true" xsi:type="text" required="true">
                <label>Autoplay Timeout</label>
                   <description>in Milliseconds</description>
                <value>5</value>
             
            </parameter>

           <parameter name="products_count" sort_order="20" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Products to Display</label>
                <value>10</value>
            </parameter>
              
        </parameters>
    </widget>
</widgets>


